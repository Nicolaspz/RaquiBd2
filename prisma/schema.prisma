generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Servico {
  id               String        @id @default(uuid())
  tipo             TipoServico
  status           StatusServico @default(PENDENTE)
  descricao        String?
  data_solicitacao DateTime      @default(now())
  data_atualizacao DateTime      @updatedAt
  usuarioId        String
  created_at       DateTime?     @default(now())
  updated_at       DateTime?     @default(now())
  Interacao        Interacao[]
  usuario          User          @relation(fields: [usuarioId], references: [id])
  Fatura           Fatura?       @relation(fields: [faturaId], references: [id])
  faturaId         String?

  @@map("servicos")
}

model Interacao {
  id        String   @id @default(uuid())
  conteudo  String
  autorId   String
  servicoId String
  criado_em DateTime @default(now())
  tipo      String
  autor     User     @relation(fields: [autorId], references: [id])
  servico   Servico  @relation(fields: [servicoId], references: [id])

  @@map("interacoes")
}

model Fatura {
  id              String       @id @default(uuid())
  numero          String       @unique
  usuarioId       String
  usuario         User         @relation(fields: [usuarioId], references: [id])
  data_criacao    DateTime     @default(now())
  data_vencimento DateTime
  servicos        Servico[]
  status          StatusFatura @default(ABERTA)
}

enum StatusFatura {
  ABERTA
  PAGA
  CANCELADA
  FECHADA
}

model User {
  id             String        @id @default(uuid())
  proces_number  String        @unique
  name           String
  email          String?       @unique
  user_name      String
  nif            String
  morada         String?
  role           Role
  redes          String
  tipo_pagamento TipoPagamento
  telefone       String        @unique
  password       String
  autoPass       String
  created_at     DateTime?     @default(now())
  updated_at     DateTime?     @default(now())
  Interacao      Interacao[]
  servicos       Servico[]
  Fatura         Fatura[]

  @@map("users")
}

enum TipoServico {
  SERVICO_ENTREGA
  SERVICO_PESSOAL
  SERVICO_24h
  SERVICO_30_DIAS
}

enum StatusServico {
  PENDENTE
  ACEITO
  EM_ANDAMENTO
  CONCLUIDO
}

enum TipoPagamento {
  CONTA_3DIAS
  CONTA_7DIAS
  CONTA_15DIAS
  CONTA_30DIAS
  CONTA_24H
}

enum Role {
  ADMIN
  CLIENT
  SUPER_ADMIN
}
